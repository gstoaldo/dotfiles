{
  "breadcrumbs.symbolPath": "last",
  "debug.openDebug": "neverOpen",
  "editor.cursorSurroundingLines": 999, // cursor always in the center of the screen
  "editor.detectIndentation": false,
  "editor.folding": false,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.lightbulb.enabled": false,
  "editor.lineHeight": 1.75,
  "editor.minimap.enabled": false,
  "editor.rulers": [
    80
  ],
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.mergeEditor": false,
  "search.quickOpen.history.filterSortOrder": "recency",
  "search.searchEditor.defaultNumberOfContextLines": 5,
  "testing.automaticallyOpenPeekView": "never",
  "window.nativeFullScreen": false,
  "window.newWindowDimensions": "inherit",
  "window.title": "${activeEditorMedium}${separator}${rootName}${separator}${profileName}",
  "workbench.colorTheme": "GitHub Light",
  "workbench.sideBar.location": "right",
  "workbench.editor.showTabs": false,
  "diffEditor.renderSideBySide": false,
  "editor.lineNumbers": "off",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.visible": false
  // Drag the following panels from the "Activity Bar":
  // - "Search"
  // - "Source Control"
  // - "Variables" and "Breakpoints" into "Debug Console"
}
