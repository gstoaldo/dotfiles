{
  "title": "F + D as Hyper Key",
  "rules": [
    {
      "description": "Press F + D together to send Hyper",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              { "key_code": "f" },
              { "key_code": "d" }
            ],
            "simultaneous_options": {
              "detect_key_down_uninterruptedly": true,
              "key_down_order": "insensitive",
              "key_up_order": "insensitive"
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          ]
        }
      ]
    }
  ]
}
